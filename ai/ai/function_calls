document.addEventListener('DOMContentLoaded', function() {
    // ... existing code ...

    // LMStudio API配置
    const API_URL = 'http://localhost:1234/v1/chat/completions';  // LMStudio默认地址
    
    // 发送消息到LMStudio
    async function sendToLMStudio(message) {
        try {
            const response = await fetch(API_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    messages: [
                        { role: "user", content: message }
                    ],
                    temperature: 0.7,
                    max_tokens: 2000,
                    stream: false
                })
            });

            if (!response.ok) {
                throw new Error('API请求失败');
            }

            const data = await response.json();
            return data.choices[0].message.content;
        } catch (error) {
            console.error('Error:', error);
            return '抱歉，我现在无法回应。请确保LMStudio正在运行并且API可访问。';
        }
    }

    // 添加AI回复到聊天窗口
    function addAIResponse(message) {
        const messageElement = document.createElement('div');
        messageElement.className = 'message ai-message';
        messageElement.textContent = message;
        document.querySelector('.chat-messages').appendChild(messageElement);
        // 滚动到底部
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    // 修改发送消息处理函数
    async function sendMessageHandler() {
        const message = messageInput.value.trim();
        if (message) {
            // 显示用户消息
            const messageElement = document.createElement('div');
            messageElement.className = 'message user-message';
            messageElement.textContent = message;
            document.querySelector('.chat-messages').appendChild(messageElement);
            
            messageInput.value = '';
            
            // 显示加载状态
            const loadingElement = document.createElement('div');
            loadingElement.className = 'message ai-message';
            loadingElement.textContent = '正在思考...';
            document.querySelector('.chat-messages').appendChild(loadingElement);
            
            // 获取AI响应
            const aiResponse = await sendToLMStudio(message);
            
            // 移除加载状态
            loadingElement.remove();
            
            // 显示AI响应
            addAIResponse(aiResponse);
        }
    }

    // ... existing code ...
});