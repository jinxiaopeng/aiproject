FLASK_APP=app.py
FLASK_ENV=development
# 应用配置
DEBUG=True
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True
API_PREFIX=/api

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=cyberlabs
DATABASE_URL=mysql+mysqlconnector://root:root@localhost/cyberlabs

# JWT配置
JWT_SECRET_KEY=your-secret-key-keep-it-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI模型配置
MODEL_OFFLINE=True
MODEL_PATH=models/bert-base-chinese
MODEL_CACHE_DIR=cache
MODEL_MAX_LENGTH=512
MODEL_BATCH_SIZE=32

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 安全配置
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3017
RATE_LIMIT=100
SSL_REDIRECT=False

# 路径配置
DATA_DIR=data
LOG_DIR=logs
TEMP_DIR=temp
UPLOAD_DIR=data/uploads

# 项目设置
PROJECT_NAME="Monitor System"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# 监控设置
METRICS_COLLECTION_INTERVAL=60
METRICS_RETENTION_DAYS=30

# 缓存设置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0